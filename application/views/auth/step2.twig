<form action="">
    <div class="step-title">
        <strong class="fs14">{{_e('填写乐陪资料')}}</strong><br/>
        <span>{{_e('请以英文或乐陪所使用的语言输入您的全部资料')}}</span>
    </div>
    <div class="step-con">
        <table>
            <tbody>
                <tr>
                    <td class="w170">{{_e('货币')}}</td>
                    <td>
                        <select name="" id="">
                            <option value="">{{_e('CNY')}}</option>
                            <option value="">{{_e('留学生')}}</option>
                            <option value="">{{_e('留学生')}}</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td>{{_e('告知条款')}}</td>
                    <td>
                        <textarea class="fl mgr10" style="width:320px;" name="" rows="5"></textarea>
                        <span class="c999">{{_e('请使用英语或xxx填写您的请求')}}</span>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="step-title">
        <strong class="fs14">{{_e('添加一个旅行方案')}}</strong><br/>
        <span>{{_e('请以英文或乐陪所使用的语言输入您的全部资料')}}</span>
    </div>
    <div class="step-con">
        <table>
            <tbody>
                <tr>
                    <td class="w170">{{_e('标题')}}</td>
                    <td>
                        <input name="title" type="text" style="width:530px;" />
                    </td>
                </tr>
                <tr>
                    <td>{{_e('服务报价')}}</td>
                    <td>
                        <input name="price" type="text" />
                    </td>
                </tr>
                <tr>
                    <td>{{_e('旅行主题')}}</td>
                    <td>
                        <ul class="t-list clearfix">
                            {% set themes=["毕业旅行","毕业旅行","毕业旅行","毕业旅行","毕业旅行"] %}
                            {% for theme in themes %}
                            <li>
                                <label><input name="travel_themes" name="" type="checkbox"/>{{theme}}</label>
                            </li>
                            {% endfor %}
                        </ul>
                        <a href="javascript:;" class="tb">+ {{_e('添加自定义主题')}}</a>
                    </td>
                </tr>
                <tr>
                    <td>{{_e('服务项目')}}</td>
                    <td>
                        <ul class="s-list clearfix">
                            {% set services=["毕业项目","毕业项目","毕业项目","毕业项目","毕业项目"] %}
                            {% for service in services %}
                            <li>
                                <label><input name="travel_services" name="" type="checkbox"/>{{service}}</label>
                            </li>
                            {% endfor %}
                        </ul>
                        <a href="javascript:;" class="tb">+ {{_e('添加自定义项目')}}</a>
                    </td>
                </tr>
                <tr>
                    <td>DAY1{{_e('线路')}}</td>
                    <td>
                        <input name="" type="text" style="width:530px;">
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <p>DAY1{{_e('行程介绍')}}</p>
                        <div class="">
                            ueditor
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    <div>
    <div class="form-btn">
        <button class="btn btn-green">{{_e('下一步')}}</button>
    </div>
</form>