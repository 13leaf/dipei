<form  id="J_lp-form" action="">
    <input type="hidden" name="step" value="1" />
    <div class="step-title">
        <strong class="fs14">{{_e('填写乐陪资料')}}</strong><br/>
        <span>{{_e('请以英文或乐陪所使用的语言输入您的全部资料')}}</span>
    </div>
    <div class="step-con">
        <table>
            <tbody>
                <tr>
                    <td class="w220">{{_e('所在位置')}}</td>
                    <td>
                        <input type="hidden" name="lid" />
                        <input id="J_loc-sug" name="locname" type="text" style="width:300px;"/>
                        <span id="J_locname-tip"></span>
                    </td>
                </tr>
                <tr>
                    <td>{{_e('乐陪类型')}}</td>
                    <td>
                        <select name="lepei_type" id="">
                            {% for type in var('LEPEI_TYPES') %}
                            <option value="{{type}}">{{TRANSLATES[type]}}</option>
                            {% endfor %}
                        </select>
                        <span id="J_lepei_type-tip"></span>
                    </td>
                </tr>
                <tr>
                    <td>{{_e('个人介绍')}}</td>
                    <td>
                        <textarea class="fl mgr10" style="width:320px;" name="desc" rows="5"></textarea>
                        <span class="c999" id="J_desc-tip">{{_e('请使用英语或xxx填写您的请求')}}</span>
                    </td>
                </tr>
                <tr>
                    <td>{{_e('语言')}}</td>
                    <td>
                        <div class="J_lang">
                            <select name="" id="">
                                {% for lang in var('LANGUAGES') %}
                                <option value="{{lang}}">{{TRANSLATES[lang]}}</option>
                                {% endfor %}
                            </select>
                            <select name="" id="">
                                {% for lang_f in var('LANGS_FAMILIAR') %}
                                <option value="{{lang_f}}">{{TRANSLATES[lang_f]}}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <a href="javascript:;" class="tb" id="J_add-lang">+ {{_e('添加其它语言')}}</a>
                    </td>
                </tr>
                <tr>
                    <td>{{_e('联系方式')}}</td>
                    <td>
                        <div class="contact">
                            {% set descs = ['tel' , 'qq' , 'weixin' , 'email'] %}
                            {% for c in var('CONTACTS') %}
                            <label class="label-input" for="">
                                <span class="label-tit">{{TRANSLATES[c]}}:</span>
                                <input name="contacts[{{c}}]" type="text"/>
                                <span id="J_{{descs[loop.index0]}}-tip"></span>
                            </label>
                            {% endfor %}
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
        <div class="agreement">
            <strong class="fs14">{{_e('乐陪服务条款')}}</strong><i class="i-icon i-rt"></i> <br/>
            <label><input name="agreement" value=1 type="checkbox" /> {{_e('同意服务条款')}}</label>
            <span id="J_agreement-tip"></span>
        </div>
    </div>
    <div class="form-btn">
        <button class="btn btn-green">{{_e('下一步')}}</button>
    </div>
</form>