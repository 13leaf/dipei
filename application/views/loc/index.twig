{% extends "base/frame.twig" %}
{% block title %}
	{% set loc = LOCATIONS[LID] %}
	{% set isCountry = loc.path|length == 1 %}
	{% if isCountry %}
		{{_e('#[locname] - 鲜旅客 – 带你寻找鲜の旅' , {locname: loc.name})}}
	{% else %}
		{{_e('#[locname]全部的小鲜 - 鲜旅客 – 带你寻找鲜の旅' , {locname: loc.name})}}
	{% endif %}
{% endblock %}
{% block content %}
    
    {# if is a country #}
    {% if loc.path|length == 1 %}
        {% include "loc/l-country.twig" %}
    {% else %}
        {% include "loc/l-city.twig" %}
    {% endif %}
{{require('index/widget-right.css')}}
{% endblock %}