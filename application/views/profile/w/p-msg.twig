{% import "base/micro.twig" as Micro %}
<section class="p-msg">
    <p class="yahei fs20">{{_e('私信')}}</p>
    <ul class="msg-list">
        {% set msgs=[{
            uid: 1,
            content: '123123123',
            create_time: 1231234514,
            num: 10
        },{
            uid: 1,
            content: '123123123',
            create_time: 1231234514,
            num: 11
        }] %}
        {% for msg in msgs %}
        <li class="msg-item clearfix">
            <div class="fl msg-head">
                {{Micro.userhead(USERS[msg.uid] , 70) }}
                <div class="mgt10">
                    {{Micro.userstatus(USERS[msg.uid])}}
                </div>
                <span class="msg-num">{{msg.num}}</span>
            </div>
            <span class="fr caaa">{{Micro.time(msg.create_time)}}</span>
            <div class="msg-right">
                <div>{{Micro.username(USERS[msg.uid])}}</div>
                <p class="msg-content">
                    {{msg.content}}
                </p>
            </div>
        </li>
        {% endfor %}
    </ul>
</section>
<section class="p-msg">
    <p class="yahei fs20">{{_e('私信')}}</p>
    <div class="msg-detail">
        <div class="clearfix mgb20">
            <a class="fr" href="#">{{_e('返回所有私信')}}</a>
            <span class="c999 mgr10">{{_e('与 #[name] 的对话', {name: USERS[uid].name})}}</span> <a href="javascript:;">{{_e('删除所有对话')}}</a>
        </div>
        <div class="msg-box clearfix">
            <div class="msg-wrap">
                <div class="c999">
                    <span class="fr">{{_e('还可以输入300字')}}</span>
                    <p>{{_e('发私信给：#[name]' , {name: USERS[uid].name})}}</p>
                </div>
                <textarea>
                </textarea>
                <a href="javascript:;" class="fr btn btn-green">{{_e('发送')}}</a>
            </div>
        </div>
        {% set msgList =[{
        uid: 1,
        content: "3ewqewqdasc",
        create_time: 12341512312
    },{
        uid: 2,
        content: "3ewqewqdasc",
        create_time: 12341512312
    }] %}
        <ul class="msg-list">
            {% for msg in msgList %}
            <li class="msg-item clearfix {{msg.uid == UID ? "msg-my" : ""}}">
                <div class="user-head">
                    {{Micro.userhead(USERS[msg.uid] , 70) }}
                </div>
                <div class="msg-right">
                    <div class="msg-name">{{msg.uid == UID ? _e('我') : Micro.username(USERS[msg.uid])}}</div>
                    <div class="msg-content">
                        {{msg.content}}
                        <p class="msg-metas c999">
                            <span class="msg-opts fr"><a href="javascript:;">{{_e('删除')}}</a></span>
                            <span>{{Micro.time(msg.create_time)}}</span>
                        </p>
                    </div>
                </div>
            </li>
            {% endfor %}
        </ul>
    </div>
</section>