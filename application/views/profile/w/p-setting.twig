{% import "base/micro.twig" as Micro %}
{# user #}
<section class="p-setting ">
    <div class="p-setting-head">
        <p class="fs20 yahei">{{_e('设置')}}</p>
    </div>
    <div class="p-meta">
        <label for="">{{_e('电子邮件')}}</label>
        <div class="p">
            {{user.email}} <em class="mgr10 mgl10">( {{_e('预订确认信将发送至该电邮地址')}} )</em>
            {# 需要知道这个用户是否已经激活过 #}
            {% if !user.actived %}
                <a href="javascript:;">{{_e('再次发送确认邮件')}}</a>
            {% endif %}
        </div>
    </div>
    <div class="p-setting-view">
        <div class="p-meta">
            <label for="">{{_e('昵称')}}</label>
            <div class="p">
                {{user.name}}
            </div>
        </div>
        <div class="p-meta">
            <label for="">{{_e('性别')}}</label>
            <div class="p">
                {{TRANSLATES[user.sex?user.sex:3]}}
            </div>
        </div>
        <div class="p-meta">
            <label for="">{{_e('年龄')}}</label>
            <div class="p">
                {{user.age}}
            </div>
        </div>
        <div class="p-meta">
            <label for="">{{_e('国籍')}}</label>
            <div class="p">
                {{user.country}}
            </div>
        </div>
        <div class="p-meta">
            <label for="">{{_e('地址')}}</label>
            <div class="p">
                {{Micro.useraddr( user , LOCATIONS )}}
            </div>
        </div>
        <div class="p-meta">
            <label for="">{{_e('个人头像')}}</label>
            <div class="p">
                <img src="{{user.head|url('head' , 200 , 200)}}" width="200" height="200" alt="{{user.name}}">
            </div>
        </div>
        <div class="btns">
            <button class="btn btn-green" id="J_profile-edit">编辑</button>
        </div>
    </div>
    <div class="p-setting-edit">
        <div class="p-meta">
            <label for="">{{_e('昵称')}}</label>
            <div class="p">
                <input type="text" name="name" value="{{user.name}}" >
            </div>
        </div>
        <div class="p-meta">
            <label for="">{{_e('性别')}}</label>
            <div class="p">
                <select name="sex" >
                {% for sex in [3,1,2] %}
                    <option value="{{sex}}" {{ sex == user.sex ? "selected" : ""}}>{{TRANSLATES[ sex ]}}</option>
                {% endfor %}
                </select>
            </div>
        </div>
        <div class="p-meta">
            <label for="">{{_e('出生年月')}}</label>
            <div class="p">
                {% set date = [{name: "birth.year", value: user.birth.year },{name: "birth.month", value: user.birth.month },{name: "birth.day", value: user.birth.day }] %}
                {{Micro.renderdate( date )}}
            </div>
        </div>
        <div class="p-meta">
            <label for="">{{_e('国籍')}}</label>
            <div class="p">
                <input type="hidden" name="country" value="{{user.country}}" />
                <input type="text" name="country-name" id="J_country-name" value="{{TRANSLATES[user.country]}}" />
            </div>
        </div>
        <div class="p-meta">
            <label for="">{{_e('地址')}}</label>
            <div class="p">
                {{Micro.useraddr( user , LOCS )}}
            </div>
        </div>
        <div class="p-meta">
            <label for="">{{_e('个人头像')}}</label>
            <div class="p">
                <img src="{{user.head|url('head' , 200 , 200)}}" width="200" height="200" alt="{{user.name}}">
            </div>
        </div>
        <div class="btns">
            <button class="btn btn-green" id="J_profile-save">保存</button>
            <button class="btn btn-green" id="J_profile-cancel">取消</button>
        </div>
    </div>
</section>