{#project#}
{% import "base/macro.twig" as Macro %}
{% set p = project %}
<section class="p-view">
    <div class="p-head">
        <p class="path c999"><a href="/profile/host/service/" class="tb mgr10">{{_e('返回旅行方案列表')}}</a><span class="monospace mgr10">&gt;</span>{{p.title}}</p>
    </div>
    <div class="p-body">
        <div class="p-meta">
            <p><span class="fs20 yahei mgr10">{{p.title}}</span>{{Macro.projectstatus(p.status)}}</p>
        </div>
        <div class="p-meta">
            <label for="">{{_e('标题')}}</label>
            <div class="p">
                {{p.title}}
            </div>
        </div>
        <div class="p-meta">
            <label for="">{{_e('服务报价')}}</label>
            <div class="p">
                {{Macro.price(p)}} <i class="i-icon i-help"></i>
            </div>
        </div>
        <div class="p-meta">
            <label for="">{{_e('旅行主题')}}</label>
            <div class="p">
                {% for theme in p.travel_themes %}
                {% if !loop.first %}
                    <em class="p-meta-sep mgr10 mgl10">|</em>
                {% endif %}
                <span>{{TRANSLATES[theme]}}</span>
                {% endfor %}
            </div>
        </div>
        <div class="p-meta">
            <label for="">{{_e('服务项目')}}</label>
            <div class="p">
                {% for service in p.travel_services %}
                <span class="mgr10"><span class="monospace">√</span>{{TRANSLATES[service]}}</span>
                {% endfor %}
            </div>
        </div>
        <div class="p-meta">
            <label for="">{{_e('告知条款')}}</label>
            <div class="p">
                {{p.notice}}
            </div>
        </div>
        {% for day in p.days %}
        <div class="p-meta">
            <label class="fs14">Day{{loop.index}} {{_e('线路')}}</label>
            <div class="p">
                {% for line in day.lines %}
                {% if !loop.first %}
                    <em class="p-meta-sep mgr10 mgl10">→</em>
                {% endif %}
                <a class="p-meta-item">{{LOCATIONS[line].name}}</a>
                {% endfor %}
            </div>
            <div class="day-desc fs14 c999">
                {{day.desc|raw}}
            </div>
        </div>
        {% endfor %}
        <div class="btns">
            <button class="btn btn-red" data-d="pid={{p.id}}" data-a="p-remove-fd">{{_e('删除方案')}}</button><a href="/profile/host/service/?pid={{p.id}}&op=update" class="btn btn-green">{{_e('编辑方案')}}</a>
        </div>
    </div>
</section>
