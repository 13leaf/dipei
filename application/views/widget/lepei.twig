{#user#}
{% import "base/micro.twig" as Micro %}
<li class="user-item">
    {%if show_desc != false %}
    <div class="u-r">
        <span style="font-size:35px;">{{user.score}}</span><br/>
        <span>{{user.score|score_desc}}</span>
        <i class="i-icon i-delete" data-a="del-his-lp" data-d="id={{user.id}}"></i>
    </div>
    {% endif %}
    <div class="u-l">
        <!--head-->
        {{Micro.userhead( user , 72 )}}
        <div class="u-status">
            {{Micro.userstatus( user )}}
        </div>
    </div>
    <div class="u-c">
        <p>{{Micro.username( user )}}</p>
        {# show user's desc #}
        {%if show_desc != false %}
        <p class="u-desc br4">{{user.desc}}</p>
        {% endif %}
        {# show user's loc and country #}
        {%if show_loc %}
        <p class="u-loc">{{user.loc}} , {{user.country}} <i class="i-country i-"></i></p>
        {% endif %}
        <p class="meta">
            <span style="color:#669900;">{{_e('最新的预定: #[time]之前' , {'time': '11 minutes'}) }}</span><br/>
            <span class="c999">{{_e('#[number]位客人正在浏览TA' , {'number': '3'}) }}</span>
        </p>
    </div>
</li>
{{require("com/user-list.css")}}