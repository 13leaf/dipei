{#loc#}
<section class="widget-loc box-s clearfix">
    <a class="loc-pic" href="/loc/city/{{loc.id}}">
        <img src="{{loc.images[0]|url("img" , 580 , 200)}}" width="100%" height="200" alt="">
        <span class="loc-name">{{loc.name}} <img style="display:inline-block;" src="{{( "image/country/32/" ~ loc.id ~ ".png" )|url("sta") }}" alt=""/></span>
        <div class="pic-bg">
            <span class="fr yahei fs14 mgr10"><i class="i-icon i-like-to"></i>{{_e('#[num]人想去',{num:loc.like})}}</span>
            <span class="fl metas">{{_e('#[num]个地陪' , {'num':loc.counts.dipei})}} &nbsp;&nbsp;&nbsp;&nbsp;{{_e('#[num]个旅行方案' , {'num' : loc.counts.project})}}</span>
        </div>
    </a>
    <ul class="theme-list">
        {% set max = 2000 %}
        {% set maxlength = 500 %}
        {% set colors = ["3ae3bc","ffa978","cb96ee","eba4a5"] %}
        {% for key , count in loc.travel_theme_counts %}

            <li><label>{{TRANSLATES[key]}}</label><input class="nor theme-color" style="width:{{count/max*maxlength}}px;background-color:#{{colors[loop.index0]}};" disabled type="text"><span class="c999">{{_e('#[num]个旅行方案' , {num: count})}}</span></li>
        {% endfor %}
    </ul>
</section>
{{require('index/widget-right.css')}}