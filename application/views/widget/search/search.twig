{% import "base/micro.twig" as Micro %}
<section class="search br4 clearfix">
    <div class="search-head">
        <i class="i-icon i-search"></i>{{_e('search')}}
    </div>
    <form class="search-body">
        <span>{{_e('xxxx tourist guiders,local people,students and other guiders...')}}</span><br/>
        <label class="input-widget">
            <input type="text" placeholder="{{_e('Country/City/Attractions')}}" />
            <i class="i-icon i-down-angle"></i>
        </label>
        <span class="fr">{{_e('select hot destination')}}</span><br/>
        {{Micro.dateselect( _e('start date') , "width:47%;float:left;margin-right:4%;" )}}
        {{Micro.dateselect( _e('end date') , "width:47%;float:left;" )}}
        <label><input type="checkbox" style="vertical-align:middle;" />&nbsp;&nbsp;{{_e('not decided')}}</label>
        <label class="input-widget" >
            <span class="input-val">{{_e('What\'s kind of guiders you are looking for?')}}</span>
            <i class="i-icon i-down-angle" style="border-left:none;"></i>
        </label>
        <button class='s-btn btn btn-pink'>{{_e('search')}}</button>
    </form>
    <div class="search-foot"></div>
</section>
{{require("pagejs/search.js,com/search.css")}}