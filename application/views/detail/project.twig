{% import "base/micro.twig" as Micro %}
{% if user.pass_count %}
<section class="project mbt20 box-s br4">
    <div class="project-h">
        <span class="fs20 yahei mgr10">{{_e('我的鲜旅方案')}}</span> <span class="fs12 c999">( {{_e('私信沟通获得最完美的行程安排')}} )</span>
    </div>
    <div class="project-b">
        <table class="u-pro"><tbody>
            {% for pid in user.projects %}
            {% set p = PROJECTS[pid] %}
            {% if p.status >= 10 %}
            <tr data-a="link" href="/post/3/{{p.id}}/">
                <td class="p-index"><span>P{{loop.index}}</span></td>
                <td class="p-title">{{p.title}}</td>
                <td class="p-price">{{Micro.price(p)}}</td>
                <td><i class="i-icon i-right-angle"></i></td>
            </tr>
            {% endif %}

            {% else %}
            <tr>
                <td>{{_e('还没有规划任何鲜旅方案')}} </td>
            </tr>
            {% endfor %}
        </tbody></table>
    </div>
</section>
{% endif %}
{{require("detail/project-detail.css")}}