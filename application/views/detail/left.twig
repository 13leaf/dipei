        <button class='s-btn btn btn-pink'>{{_e('搜索')}}</button>
    </form>
    <div class="search-foot"></div>
</section>


{# =============================my history========================== #}
{% set hisList = request('_lp','cookie') %}
{% if hisList %}
    {% set hisList = ','|php_explode(hisList) %}
    <section class="my-history mod">
        <div class="mod-h">{{_e('我浏览过的乐陪')}}</div>
        <ul class="mod-c br4">
            {% for uid in hisList %}
                {% include "widget/lepei.twig" with
                    {"user": USERS[uid] ,
                    "show_loc": true ,
                    "show_desc": false ,
                    "show_opt": false } %}
            {% endfor %}
        </ul>
    </section>
{% endif %}

