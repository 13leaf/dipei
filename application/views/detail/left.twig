        <label class="input-widget mgt10 J_dropdown" >
            <span class="input-val">{{_e('想找什么类型的地陪？')}}</span>
            <i class="i-icon i-down-angle" style="border-left:none;"></i>
            <ul class="dropdown-menu" style="width:217px;">
                {% for type in var('LEPEI_TYPES') %}
                <li>
                    <a>{{TRANSLATES[type]}}</a>
                </li>
                {% endfor %}
            </ul>
