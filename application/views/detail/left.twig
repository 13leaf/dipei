{# search #}
<section class="search br4 clearfix">
    <div class="search-head">
        <i class="i-icon i-search"></i>{{_e('搜索')}}
    </div>
    <form class="search-body">
        <label class="input-widget J_dropdown" style="margin-top:10px;">
            {#<input type="text" placeholder="{{_e('国家 / 城市 / 景点')}}" class="nor" />#}
            <span class="input-val">{{_e('国家 / 城市 / 景点')}}</span>
            <i class="i-icon i-down-angle"></i>
            <ul class="dropdown-menu" style="width:217px;">
                {% for lid in search_list %}
                <li>
                    <a>{{LOCATIONS[lid].name}}</a>
                </li>
                {% endfor %}
            </ul>
        </label>
