{% extends "base/frame.twig" %}

{% block title %}detail{% endblock %}
{% block content %}
    {% set user=USERS[VUID]%}
    <section class="layout-260-720">
        <div>
            <button data-a="fav" data-d="tp=3&oid={{user.id}}" class="fr btn btn-pink"> fav </button>
            {% include "widget/path.twig" with {path_lid: user.lid , path_desc: user.name } %}
        </div>
        <div class="layout-l">
            <!--search-->
            {%include "detail/left.twig" %}
        </div>
        <div class="layout-r">
            <!--user detail-->
            {%include "detail/user-detail.twig" %}
            <!--project detail-->
            {%include "detail/project.twig" %}
            <!--post list-->
            <section class="posts-list-wrap mbt20 bg-w br4 box-s">
                <header>
                    <span class="fs20 yahei mgr10">{{_e('最新动态')}}</span>
                </header>
                <ul class="posts-list">
                    {% set plist = [1,1,1,1,1,2,2,2]%}
                    {% for pid in plist %}
                        {% include "widget/post-item.twig"  with {
                            post: PROJECTS[pid] ,
                            show_user: false ,
                            show_loc: true
                        } %}
                    {% endfor %}
                </ul>
            </section>
        </div>
    </section>
    {{ require("pagejs/detail.js") }}
{% endblock %}