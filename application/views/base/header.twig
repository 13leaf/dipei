{# block header #}
<section class="top">
    <div class="top-color" ></div>
    <div class="top-con">
        <a href="/"><img class="logo" src="{{'image/logo.png'|url}}" alt="{{_e('乐陪')}}" title="{{_e('乐陪')}}"/></a>
        <div class="top-r clearfix">
            <div class="top-r-w J_no-stop">
                {#
                1.如果没有登录，弹出登录框
                2.如果不是乐陪，跳转到认证页面
                3.如果是乐陪，跳转到个人中心页面
                 #}
                <a class="btn btn-pub"
                {{ UID ? ( USERS[UID].lepei_type ? 'href=/profile/?type=update' : 'href=/auth/' ) : 'data-A="login"'}}
                >{{_e('发布一个鲜旅')}}</a>
            </div>
            <div class="top-r-sep"></div>
            <div class="top-r-w {{ UID ? "" : "J_no-stop"}}">
                {% if UID %}
                    <img class="bdr100" src="{{USERS[UID].head|url('head' , 30 , 30)}}" width="30" height="30" alt="{{USERS[UID].name}}"/>
                    <span class="mgl10">{{USERS[UID].name}}</span>
                    <div class="dropdown-menu">
                        <ul class="dropdown-menu-inner">
                            <li><a href="/profile/?t=custom">{{_e('游客控制面板')}}</a></li>
                            <li><a href="/profile/?t=host">{{_e('小鲜控制面板')}}</a></li>
                            <li><a data-A="logout">{{_e('退出')}}</a></li>
                        </ul>
                    </div>
                {% else %}
                    <i class="i-icon i-user"></i>
                    <strong data-A="reg">{{_e('注册帐户')}}</strong>
                    {{_e('，已有帐户请')}}
                    <strong data-A="login">{{_e('登录')}}</strong>
                {% endif %}
            </div>
            <div class="top-r-sep"></div>
            <div class="top-r-w">
                <!--<span class="msg-num">4</span>-->
                <i class="i-icon i-msg"></i>
            </div>
            <div class="top-r-sep"></div>
            <div class="top-r-w">
                {% set locals = var('LOCALS') %}
                {% set localCountry = var('LOCALS_COUNTRY') %}
                <img class="flag" src="{{("image/country/24/" ~ localCountry[request("lang","cookie")]  ~ ".png")|url("sta")}}" alt="">
                <div class="dropdown-menu" c="lang">
                    <ul class="dropdown-menu-inner">
                        {% for key , local in locals %}
                            <li c="{{key}}"><a><i class="i-country i-{{localCountry[key]}}"></i>{{local}}</a></li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
            <div class="top-r-sep"></div>
            <div class="top-r-w">
                {% set moneys = var('MONEYS') %}
                <span>{{moneys[request('money' , 'cookie')].symbol}}</span>
                <div class="dropdown-menu" c="money">
                    <ul class="dropdown-menu-inner money-list" style="height: 200px;overflow-y: scroll;">
                        {% for money_tid , money in moneys %}
                        <li c="{{money_tid}}">
                            <a><span class="symbol">{{moneys[money_tid].symbol}}</span>{{TRANSLATES[money_tid]}}</a>
                        </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
            <div class="top-r-sep"></div>
        </div>
    </div>
</section>